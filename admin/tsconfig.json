// Specialized tsconfig for the admin directory,
// includes DOM typings and configures the admin build
{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"types": ["node", "@iobroker/types"],
		"noEmit": false,
		"noEmitOnError": false,
		"outDir": "./build",
		"sourceMap": true,
		"sourceRoot": "./src",
		"noImplicitAny": false,
		"lib": ["es2018", "DOM"],
		"esModuleInterop": true
	},
	"include": ["./**/*.ts", "./**/*.tsx", "../src/lib/adapter-config.d.ts", "./assets/map-icons/index.d.ts"],
	"exclude": ["./**/*.test.ts", "./**/*.test.tsx"]
}
